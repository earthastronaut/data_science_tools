// Example of possible settings to use for this project
// can copy this file to settings.json in your same directory.
// TODO: convert all of these into the ds_cli
{
    "trailingComma": "none",
    "prettier.trailingComma": "none",
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "${workspaceFolder}/scripts/bin/pylint.sh",
    "python.linting.pylintUseMinimalCheckers": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/scripts/bin/flake8.sh",
    "editor.formatOnSave": true,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${workspaceFolder}/scripts/bin/black.sh",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3"
}